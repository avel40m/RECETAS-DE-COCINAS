@model RecetasCocinas.Models.tipo

@{
    ViewBag.Title = "Actualizar";
}

<h2>Actualizar</h2>


@using (Html.BeginForm("Actualizar", "tipo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(t => t.id)

        @Html.LabelFor(t => t.descripcion, new { @class = "control-label" })
        @Html.EditorFor(t => t.descripcion, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.descripcion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-outline-success btn-sm" value="Crear" />
    </div>
}